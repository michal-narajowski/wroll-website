---
import BaseLayout from '../layouts/BaseLayout.astro';
import SEO from '../components/SEO.astro';
import ProductServiceSchema from '../components/ProductServiceSchema.astro';
import FAQSchema from '../components/FAQSchema.astro';
import Gallery from '../components/Gallery.astro';
import { getUrl } from '../utils/url';

const title = 'Rolety materiałowe Wrocław — montaż i serwis | WROLL';
const description = 'Rolety materiałowe na wymiar we Wrocławiu. Szybki montaż, szeroki wybór tkanin, darmowa wycena. Sprawdź realizacje i zamów pomiar.';

const faqs = [
  { question: 'Ile czasu trwa montaż rolet materiałowych?', answer: 'Standardowy montaż trwa od 1 do 2 godzin w zależności od liczby okien.' },
  { question: 'Czy wykonujecie pomiar i wycenę?', answer: 'Tak — oferujemy bezpłatny pomiar i fachową poradę na miejscu.' }
];

const originalImage = getUrl('/images/product-1.png');

const images = [
  { webp: getUrl('/images/gallery/rolety-materialne-1.jpg'), fallback: getUrl('/images/gallery/rolety-materialne-1.jpg'), alt: 'Rolety materiałowe - Wykonanie 1' },
  { webp: getUrl('/images/gallery/rolety-materialne-2.jpg'), fallback: getUrl('/images/gallery/rolety-materialne-2.jpg'), alt: 'Rolety materiałowe - Wykonanie 2' },
  { webp: getUrl('/images/gallery/rolety-materialne-3.jpg'), fallback: getUrl('/images/gallery/rolety-materialne-3.jpg'), alt: 'Instalacja rolet materiałowych' }
];

---
<BaseLayout>
  <SEO title={title} description={description} />

  <div class="py-6">
    <h1>Rolety materiałowe Wrocław</h1>
    <p class="text-lg text-gray-700 mb-6">{description}</p>
  </div>

  <section class="section">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
      <div>
        <h2>Dlaczego rolety materiałowe?</h2>
        <ul class="space-y-3 mt-4">
          <li class="flex gap-3"><span class="text-black font-bold">✓</span> Duży wybór tkanin — zaciemniające, transparentne, dekoracyjne</li>
          <li class="flex gap-3"><span class="text-black font-bold">✓</span> Wysoka jakość wykonania i estetyczne wykńczenie</li>
          <li class="flex gap-3"><span class="text-black font-bold">✓</span> Montaż i serwis przez doświadczony zespół</li>
          <li class="flex gap-3"><span class="text-black font-bold">✓</span> Dostępne w każdej wielkości i kolorze</li>
        </ul>
      </div>
      <div class="rounded-lg overflow-hidden shadow-md">
        <img src={originalImage} alt="Rolety materiałowe - Realizacja" class="w-full h-auto" />
      </div>
    </div>
  </section>

  <section class="section">
    <h2>Nasza oferta</h2>
    <p class="text-gray-700 mb-6">Produkujemy i montujemy rolety na wymiar — do mieszkań, biur i obiektów użyteczności publicznej. Oferujemy naprawy, regulacje i serwis. Każda roleta jest dopasowana indywidualnie do okna klienta.</p>
    <a href={getUrl('/kontakt')} class="btn">Zamów bezpłatny pomiar</a>
  </section>

  <Gallery images={images} />

  <section class="section">
    <h2 class="mb-6">Najczęściej zadawane pytania</h2>
    <div class="space-y-4">
      {faqs.map(faq => (
        <div class="bg-gray-50 p-4 rounded-lg">
          <h3 class="font-semibold text-gray-800 mb-2">{faq.question}</h3>
          <p class="text-gray-700">{faq.answer}</p>
        </div>
      ))}
    </div>
  </section>

  <FAQSchema faqs={faqs} />
  <ProductServiceSchema name="Rolety materiałowe" description={description} images={images.map(i=>i.webp)} priceRange="od 200" />
</BaseLayout>
