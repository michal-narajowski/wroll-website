---
import BaseLayout from '../layouts/BaseLayout.astro';
import SEO from '../components/SEO.astro';
import ProductServiceSchema from '../components/ProductServiceSchema.astro';
import FAQSchema from '../components/FAQSchema.astro';
import Gallery from '../components/Gallery.astro';

const title = 'Żaluzje Wrocław — aluminiowe, drewniane, pionowe | WROLL';
const description = 'Żaluzje we Wrocławiu: aluminiowe, drewniane i pionowe. Dopasujemy rozwiązanie do Twojego wnętrza, oferujemy montaż i serwis.';

const faqs = [
  { question: 'Jak dobrać rodzaj żaluzji?', answer: 'Wszystko zależy od stylu wnętrza i poziomu kontroli światła — doradzimy podczas pomiaru.' },
  { question: 'Czy żaluzje są trwałe?', answer: 'Tak — używamy materiałów najwyższej jakości, które wytrzymują lata intensywnego użytku.' }
];

const originalImage = '/images/product-5.png';

const images = [
  { webp: '/images/gallery/zaluzje-1.jpg', fallback: '/images/gallery/zaluzje-1.jpg', alt: 'Żaluzje aluminiowe' },
  { webp: '/images/gallery/zaluzje-2.jpg', fallback: '/images/gallery/zaluzje-2.jpg', alt: 'Żaluzje drewniane' },
  { webp: '/images/gallery/zaluzje-3.jpg', fallback: '/images/gallery/zaluzje-3.jpg', alt: 'Instalacja Żaluzji' }
];

---
<BaseLayout>
  <SEO title={title} description={description} />

  <div class="py-6">
    <h1>Żaluzje Wrocław</h1>
    <p class="text-lg text-gray-700 mb-6">{description}</p>
  </div>

  <section class="section">
    <h2>Typy żaluzji</h2>
    <ul class="space-y-3 mt-4">
      <li class="flex gap-3"><span class="text-black font-bold">✓</span> Żaluzje aluminiowe cienkie i grube</li>
      <li class="flex gap-3"><span class="text-black font-bold">✓</span> Żaluzje drewniane i bambusowe</li>
      <li class="flex gap-3"><span class="text-black font-bold">✓</span> Żaluzje pionowe do dużych przeszkleń</li>
      <li class="flex gap-3"><span class="text-black font-bold">✓</span> Żaluzje plisowane i składane</li>
    </ul>
  </section>

  <Gallery images={images} />

  <section class="section">
    <h2 class="mb-6">Najczęściej zadawane pytania</h2>
    <div class="space-y-4">
      {faqs.map(faq => (
        <div class="bg-gray-50 p-4 rounded-lg">
          <h3 class="font-semibold text-gray-800 mb-2">{faq.question}</h3>
          <p class="text-gray-700">{faq.answer}</p>
        </div>
      ))}
    </div>
  </section>

  <FAQSchema faqs={faqs} />
  <ProductServiceSchema name="Żaluzje" description={description} images={images.map(i=>i.webp)} priceRange="od 150" />
</BaseLayout>
