---
import { getUrl } from '../utils/url';
---
<header class="bg-white border-b border-gray-300 sticky top-0 shadow-sm">
  <nav class="container-wide flex items-center justify-between py-4">
    <a href={getUrl('/')} class="flex items-center gap-2 no-underline">
      <img src={getUrl('/images/logo.jpg')} alt="WROLL logo" class="h-10 w-auto" />
      <span class="text-2xl font-bold text-black">WROLL</span>
    </a>
    <div class="flex gap-6 flex-wrap">
      <a href={getUrl('/oferta')} class="text-black hover:text-gray-700 no-underline font-medium">Oferta</a>
      <a href={getUrl('/rolety-materialowe-wroclaw')} class="text-black hover:text-gray-700 no-underline font-medium">Rolety materiałowe</a>
      <a href={getUrl('/rolety-dzien-noc-wroclaw')} class="text-black hover:text-gray-700 no-underline font-medium">Rolety dzień‑noc</a>
      <a href={getUrl('/zaluzje-wroclaw')} class="text-black hover:text-gray-700 no-underline font-medium">Żaluzje</a>
      <a href={getUrl('/moskitiery-wroclaw')} class="text-black hover:text-gray-700 no-underline font-medium">Moskitiery</a>
      <a href={getUrl('/rolety-zewnetrzne-wroclaw')} class="text-black hover:text-gray-700 no-underline font-medium">Rolety zewnętrzne</a>
      <a href={getUrl('/kontakt')} class="text-black hover:text-gray-700 no-underline font-medium">Kontakt</a>
    </div>
  </nav>
</header>
